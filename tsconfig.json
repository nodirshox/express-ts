{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "@models/*": ["src/models/*"],
            "@config/*": ["src/config/*"],
            "@shared/*": ["src/shared/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}